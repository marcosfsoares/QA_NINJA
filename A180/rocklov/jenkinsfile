pipeline {
    agent {
        docker {
            image 'ruby'
            args '--network rocklov-network'
        }
    }

    stages {
        stage('Configuration') {
            steps {
                sh 'cd A180 && cd rocklov && bundle install'
            }
        }
        stage('Testing') {
            steps {
                sh 'cd A180 && cd rocklov && cucumber'
            }
        }
        stage('UAT') {
            steps {
                echo 'Aguardando testes de aceitação.'
                input message: 'Podemos ir para produção?' 
            }
            
        }
        stage('Prod') {
            steps {
            echo 'WebApp pronta para produção. :)'

            }
                     
        }
    }
    post {
        always {
            echo 'To do...'
        }
    }
}
